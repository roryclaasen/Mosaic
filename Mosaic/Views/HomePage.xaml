<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Mosaic.Views.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:toolkit="using:CommunityToolkit.WinUI.UI.Controls">

    <Grid>
        <CommandBar IsOpen="False" DefaultLabelPosition="Right" Canvas.ZIndex="10">
            <AppBarButton Label="Toggle Labels" Click="AppBar_ToggleLabels">
                <AppBarButton.Icon>
                    <FontIcon Glyph="&#xED1E;" />
                </AppBarButton.Icon>
            </AppBarButton>
            <CommandBar.SecondaryCommands>
                <AppBarButton Icon="Setting" Label="Settings">
                    <AppBarButton.KeyboardAccelerators>
                        <KeyboardAccelerator Modifiers="Control" Key="I" />
                    </AppBarButton.KeyboardAccelerators>
                </AppBarButton>
            </CommandBar.SecondaryCommands>
        </CommandBar>

        <toolkit:UniformGrid x:Name="MosaicGrid" />
    </Grid>
</Page>
